{
    "title": "servient",
    "description": "node-wot CLI Servient",
    "securityDefinitions": {
        "basic_sc": {
            "scheme": "basic"
        }
    },
    
    "protocolList": { 
        "httpServer": {
            "protocol": "http",
            "baseKeyword": "http://example.org",  
            "contentType": "json",
            "securityAbstract": {
                "basic_sc": {
                    "in": "header",
                    "name": "authorization"
                } 
            }
        }
    },
    "security": "basic_sc",
    "properties": {
        "things": {
            "type": "object",
            "description": "Get things",
            "observable": false,
            "readOnly": true
        },
        "securitySchemeSupported": {
            "type": "array",
            "readOnly": true,
            "default": [
                "userpasskeyword",
                "apikey",
                "bearer"
            ],
            "items": {
                "type": "string",
                "enum": [
                    "userpasskeyword",
                    "apikey",
                    "bearer"
                ]
            }
        },
        "protocolSecurityConfigurations": {
            "type": "object",
            "description": "Get things",
            "readOnly": true,
            "additionalProperties": false,
            "properties": {
                "mqtt": {
                    "type": "object",
                    "properties": {
                        "apikey": {
                            "type": "object",
                            "properties": {
                                "in": {
                                    "type": "string",
                                    "enum": [
                                        "body",
                                        "header",
                                        "query"
                                    ]
                                }
                            }
                        },
                        "userpasskeyword": {
                            "type": "object",
                            "properties": {
                                "in": {
                                    "type": "string",
                                    "enum": [
                                        "header"
                                    ]
                                }
                            }
                        }
                    }
                },
                "http": {
                    "type": "object",
                    "properties": {
                        "apikey": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "in": {
                                    "type": "string",
                                    "enum": [
                                        "body",
                                        "header",
                                        "query"
                                    ]
                                }
                            }
                        },
                        "userpasskeyword": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "in": {
                                    "type": "string",
                                    "enum": [
                                        "header"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "actions": {
        "addSecurity": {
            "description": "Request to Add the Security Scheme",
            "input": {
                "thingsID": {
                    "type": "string"
                },
                "securityDefinition": {
                    "type": "object",
                    "minProperties": 1
                },
                "protocolList": {
                    "type": "object",
                    "minProperties": 1
                },
                "required": [
                    "thingsID",
                    "securityDefinition"
                ]
            },
            "output": {
                "type": "object",
                "description": "Returns success or error based on the negotiation"
            }
        },
        "removeSecurity": {
            "description": "Request to remove the Security Scheme",
            "input": {
                "type": "object",
                "description": "Input parameter for the remove operation",
                "properties": {
                    "thingsID": {
                        "type": "string"
                    },
                    "securityPayload": {
                        "type": "object",
                        "properties": {
                            "securityDefinition": {
                                "type": "string"
                            },
                            "protocol": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "securityDefinition"
                        ]
                    }
                },
                "required": [
                    "thingsID",
                    "securityPayload"
                ]
            },
            "output": {
                "type": "object",
                "description": "Returns success or error based on the negotiation"
            }
        }
    }
}